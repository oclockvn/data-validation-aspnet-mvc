@using WebApplication1.Models
@model Product

@{
    ViewBag.Title = "Data Validation";        
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "product-form", style = "margin-top: 2em;" }))
{   
    @Html.ValidationSummary()
    
    <div class="form-group">
        <label>Product name</label>
        @Html.TextBoxFor(m => m.Name, new { @class="form-control", autocomplete="off"})
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    
    <div class="form-group">
        <label>Product price</label>
        @Html.TextBoxFor(m => m.Price, new { @class="form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    
    <div class="form-group">
        <label>Product snippet</label>
        @Html.TextBoxFor(m => m.Snippet, new { @class="form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Snippet)
    </div>
    
    <div class="form-group">
        <label>Product description</label>
        @Html.TextAreaFor(m => m.Description, new { @class="form-control"})
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    
    <div>
        <button type="submit" class="btn btn-default">Save changes</button>
    </div>
}

@section scripts {
    <script>
        app.formValidationBuilder();
    </script>
}